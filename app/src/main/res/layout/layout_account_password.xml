<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/color_white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_default"
            android:id="@+id/ll_header"
            android:padding="@dimen/margin_default"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_title"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:text="PIN"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/color_black"
                android:text="Masukkan pin 4 digit"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_default"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black1"
                    android:textSize="@dimen/font_value"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_pin"
                    android:inputType="textPassword"
                    android:maxLength="4"
                    android:gravity="center"
                    android:text=""/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/iv_clear"
                        android:src="@mipmap/ic_clear"
                        android:background="@drawable/riple_black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_default"
            android:paddingRight="@dimen/margin_default"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 1 "
                    android:id="@+id/tv_1"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 2 "
                    android:id="@+id/tv_2"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 3 "
                    android:id="@+id/tv_3"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 4 "
                    android:id="@+id/tv_4"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 5 "
                    android:id="@+id/tv_5"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 6 "
                    android:id="@+id/tv_6"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 7 "
                    android:id="@+id/tv_7"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 8 "
                    android:id="@+id/tv_8"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 9 "
                    android:id="@+id/tv_9"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text="   "
                    android:visibility="invisible"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:background="@drawable/riple_black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text=" 0 "
                    android:id="@+id/tv_0"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_black"
                    android:background="@drawable/riple_black"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="@dimen/min_number"
                    android:text="   "
                    android:visibility="invisible"
                    android:padding="24dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_number"
                    android:textStyle="bold"
                    android:background="@drawable/riple_black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>