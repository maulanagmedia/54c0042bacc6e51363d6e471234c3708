<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_default">

            <TextView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:text="A"
                android:id="@+id/tv_item1"
                android:gravity="center"
                android:layout_marginRight="@dimen/margin_default"
                android:textSize="30sp"
                android:background="@drawable/circle_background_orange"
                android:textColor="@color/color_white"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentRight="true"
                android:id="@+id/ll_delete_container"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_delete"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="?attr/selectableItemBackground"
                android:layout_toLeftOf="@id/ll_delete_container"
                android:id="@+id/ll_edit_container">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_edit"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_toLeftOf="@id/ll_edit_container"
                android:layout_toRightOf="@id/tv_item1"
                android:padding="@dimen/margin_default"
                android:id="@+id/tv_item2"
                android:textSize="20sp"
                android:singleLine="true"
                android:ellipsize="end"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>