<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gmedia.net.id.restauranttakingorder.Printer.DiscoverPrinter"
    android:padding="@dimen/margin_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_printer"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_default"
            android:id="@+id/ll_refresh_conteiner"
            android:visibility="gone"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/text_color_blue"
                android:text="Pemindaian Printer"
                android:textSize="@dimen/font_value"
                android:gravity="center"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_input_height"
                android:background="@drawable/ripple_selected_blue"
                android:layout_marginTop="@dimen/margin_default"
                android:text="Pindai Ulang"
                android:id="@+id/btn_refresh"
                android:drawableLeft="@mipmap/ic_refresh"
                android:padding="@dimen/margin_default"
                android:textColor="@color/text_color_blue"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
